[color]
	ui = true
	diff = always
[user]
	name = Ben Rabinovitch
	email = github@ben.rabinovitch.ca
[alias]
	tree = ! git log --graph --oneline --no-decorate --color | less -R
	st = status
	di = "!f() { git diff \"$@\" | less -R; }; f"
	dt = difftool
[push]
	default = upstream
[diff]
	tool = gvimdiff
[difftool "gvimdiff"]
	cmd = gvim -f -R -d \"$LOCAL\" \"$REMOTE\"
[core]
	excludesfile = ~/.gitignore-global
