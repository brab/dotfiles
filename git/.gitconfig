[color]
	ui = true
	diff = always
[user]
	name = Ben Rabinovitch
	email = github@ben.rabinovitch.ca
[alias]
	tree = ! git log --graph --oneline --no-decorate --color | less -R
	tr = ! git log --color --graph --pretty=format:\"%C(cyan)%<(9,trunc)%an%C(reset)%C(yellow)%ar%C(reset) %C(red)%D%C(reset) %<(50,trunc)%s\" | less -R
	st = status --short
	di = "!f() { git diff \"$@\" | less -R; }; f"
	dt = difftool
[push]
	default = upstream
[diff]
	tool = gvimdiff
[difftool "gvimdiff"]
	cmd = gvim -f -R -d \"$LOCAL\" \"$REMOTE\"
[core]
	excludesfile = ~/.gitignore-global
