[color]
	ui = true
	diff = always
[user]
	name = Ben Rabinovitch
	email = github@ben.rabinovitch.ca
[alias]
	tree = log --graph --oneline --decorate --color
	st = status
	di = ! git diff | less -R
	dt = difftool
[push]
	default = upstream
[diff]
	tool = mvimdiff
[difftool "mvimdiff"]
	cmd = mvim -f -R -d \"$LOCAL\" \"$REMOTE\"
[core]
	excludesfile = ~/.gitignore
